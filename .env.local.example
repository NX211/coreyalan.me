# Main configuration
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
NEXT_SKIP_STATIC_EXPORT=true

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace_with_your_secret_min_32_chars
NEXTAUTH_JWT_SECRET=replace_with_your_jwt_secret_min_32_chars

# Database - PostgreSQL configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/coreyalan_dev?schema=public

# Invoice Ninja
INVOICE_NINJA_API_KEY=replace_with_your_api_key
INVOICE_NINJA_URL=https://api.invoiceninja.com/v1
INVOICE_NINJA_BASE_URL=https://api.invoiceninja.com
INVOICE_NINJA_CLIENT_ID=replace_with_your_client_id
INVOICE_NINJA_CLIENT_SECRET=replace_with_your_client_secret
INVOICE_NINJA_REDIRECT_URI=http://localhost:3000/api/auth/callback/invoice-ninja

# OAuth2 Configuration
GOOGLE_CLIENT_ID=replace_with_your_client_id
GOOGLE_CLIENT_SECRET=replace_with_your_client_secret

# Session Configuration
SESSION_SECRET=replace_with_your_session_secret_min_32
COOKIE_SECRET=replace_with_your_cookie_secret_min_32

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
CSRF_SECRET=replace_with_your_csrf_secret_min_32
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
SECURITY_LOG_LEVEL=debug

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TOKEN=replace_with_your_redis_token
# Upstash Redis Config (for production-compatible local development)
UPSTASH_REDIS_REST_URL=https://localhost:6379
UPSTASH_REDIS_REST_TOKEN=replace_with_your_redis_token

# Contact Form Configuration
CONTACT_EMAIL=your-email@example.com

# SMTP Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=testuser
SMTP_PASSWORD=testpassword
SMTP_FROM=noreply@example.com

# Logging
LOG_LEVEL=debug 